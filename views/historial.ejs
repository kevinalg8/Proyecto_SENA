    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script>
    $('#persona').DataTable({    
        ajax: {
            url: "/data",
            dataSrc: ""
        },   
        columns: [
            {"data": "nombre"},        
            {'data': 'apellidos'},
            {'data': 'documento'},
            {'data': 'email'},
            {'data': 'ficha'},
            {'data': 'fechaentrada'},
            {'data': 'fechasalida'},    
            {"data": null,
                "render": function (data) { 
                    return '<a href="/modificar/'+data.idpersona+ '"class="btn btn-info"><i class="fas fa-edit"></i></a><a onclick="confirmar('+data.idpersona+')" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>'                           
                    }
            }
        ],
        pageLength : 5,
        lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'Todos']]    
    });

    
    function confirmar(idpersona) {
    Swal.fire({
        title: 'Â¿Confirma eliminar el registro: '+idpersona+'?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Confirmar'
        }).then((result) => {
        if (result.isConfirmed) {   
            window.location = '/delete/'+idpersona;                              
        }
    });
    };
    </script>

